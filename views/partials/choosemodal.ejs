<% include header %>

<div class="modal fade" id="chooseModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content"> 
      <div class="modal-header">
        <h2 class="modal-title uni-title reg-title" id="modalLabel">Oops, you're not supposed to see this.</h2>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <img src="" id="modal-image" class="choosemodal-image img-fluid"> 
        <p id="modal-text" class="text-center"></p> 
      </div>
      <div class="modal-footer">
        <form action="/choosemodal" method="POST">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Go Back</button>
          <button type="submit" id="chooseThis" class="btn btn-success" name="selectedName" value="">Yes</button>
          <input id="chosenPic" name="selectedPic" value="" type="hidden">
        </form>
      </div>
    </div>
  </div>
</div>

<% include footer %> 