<% include ./partials/header %>
<div class="introbox container-fluid">
    <% include ./partials/flash %>
    <div class="my-5">
        <h1 class="headertext display-4">Reset Your Password</h1>
        <div class="textboxes lead">
            <p>Set a new password.</p>
        </div>
        <form action="/reset/<%= token %>" method="POST" class="entryform m-4" name="passwordresetform">
            <div class="form-group formgroup">
                <label for="password">New Password</label>
                <input type="password" name="password" value="" placeholder="New password" autofocus="autofocus" class="form-control"/>
            </div>
            <div class="form-group formgroup">
                <label for="confirm">Confirm Password</label>
                <input type="password" name="confirm" value="" placeholder="Confirm password" class="form-control"/>
            </div>
            <button type="submit" id="passwordRecovery" name="recover" value="password" class="btn btn-light m-1 border border-dark border-2">Reset My Password</button>
        </form>
    </div>
</div>

<% include ./partials/footer %>